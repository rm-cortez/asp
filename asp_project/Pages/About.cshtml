@page
@model AboutModel
@{
    ViewData["Title"] = "About";

}

    <div class="col-md-12">
        <p>@Model.status</p>
        <button type="button" class="btn btn-primary" onClick="Btn_click()">Primary</button>
        <div class="container bg-white rounded shadow p-4 my-4">
          <div class="row">
            <img id="img" src="scripts/bc39.png" alt="" width="250">
            <button type="button" name="button" onclick="scan()">Scan</button>
            
          </div>
        </div>
    </div>



<script>
    function Btn_click() {
        var name = '@Model.status'
            console.log('click')
            console.log(name)
    }
</script>
<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        console.log("capacitor", Capacitor.Plugins)

        //console.log("capacitor", Capacitor.CameraResultType)


        Capacitor.Plugins.Camera.getPhoto({
            resultType: 'base64',
            source: 'CAMERA',
            quality: 100

        })
            .then(img => {
                //console.log("img", img)
                let base64Img = `data:image/${img.format};base64,${img.base64String}`
                document.querySelector('#img').src = base64Img
            })
});
</script>
