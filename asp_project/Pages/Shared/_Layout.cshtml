@{
    ViewData["project"] = "ASP Project";

    ViewData["hostname"] = $"{Context.Request.Scheme}://{Context.Request.Host}";

    var _pagesArr = new[] { "Index","About" };


}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewData["project"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCkTqkS2H8tQmSvjcUwoH7C5nhdBXVHhzU"></script>


    <script src="~/scripts/capacitor.js"></script>
    <script type="module"
            src="~/scripts/pwa-elements/dist/ionicpwaelements/ionicpwaelements.esm.js"></script>
    <script nomodule
            src="~/scripts/pwa-elements/dist/ionicpwaelements/ionicpwaelements.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid pl-0">
                <a class="navbar-brand" href="http://rcsproductions.us">
                    <img src="~/img/cropped-logo-7.png" width="50" height="50" class="d-inline-block align-top nav-bar-icon" alt="rcsproductions" loading="lazy">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @foreach (var _page in _pagesArr)
                        {


                            <li>
                                <a class="nav-link text-white" asp-area="" asp-page="/@_page">


                                    @if (_page == "Index")
                                    {
                                        @ViewData["project"]
                                    }
                                    else
                                    {
                                        @_page
                                    }

                                </a>
                            </li>


                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div class="row">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted text-center bg-dark">
        <div class="container text-white">
            <a href="http://rcsproductions.us">RCSProductions</a> | &copy;@DateTime.Now.Year.ToString()
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/analytics.js"></script>
    <script data-main="@ViewData["hostname"]/scripts/main.js" src="@ViewData["hostname"]/scripts/require.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
